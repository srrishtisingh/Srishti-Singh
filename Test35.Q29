//Q29 Hidden Scrolls (staircase search from top-right), O(n+m)

public class Q29_The_Hidden_Scrolls_Staircase_Search {
    public static boolean find(int[][] mat, int target){
        int n = mat.length, m = mat[0].length;
        int i=0, j=m-1;
        while(i<n && j>=0){
            if(mat[i][j]==target) return true;
            if(mat[i][j] > target) j--; else i++;
        }
        return false;
    }
    public static void main(String[] args){
        int[][] mat = {{1,4,7,11},{2,5,8,12},{3,6,9,16},{10,13,14,17}};
        System.out.println(find(mat,6)); // true
    }
}
