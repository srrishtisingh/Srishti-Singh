//Q8 The Royal Diagonal
//Sum both primary and secondary diagonals of a square matrix.

public class Q8_The_Royal_Diagonal {
    public static void diagonalSums(int[][] a) {
        int n = a.length;
        long d1=0,d2=0;
        for (int i=0;i<n;i++) {
            d1 += a[i][i];
            d2 += a[i][n-1-i];
        }
        System.out.println("Primary = " + d1 + ", Secondary = " + d2);
    }
    public static void main(String[] args) {
        int[][] a = {{1,2,3},{4,5,6},{7,8,9}};
        diagonalSums(a); // Primary = 15, Secondary = 15
    }
}
