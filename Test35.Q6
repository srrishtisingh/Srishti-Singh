//Q6 The Treasure Island
//Find row with maximum sum in a matrix.

public class Q6_The_Treasure_Island {
    public static int maxRowIndex(int[][] mat) {
        int n = mat.length, m = mat[0].length;
        int bestRow = 0; long bestSum = Long.MIN_VALUE;
        for (int i=0;i<n;i++) {
            long s=0; for (int j=0;j<m;j++) s+=mat[i][j];
            if (s>bestSum){ bestSum=s; bestRow=i; }
        }
        return bestRow; // 0-based index
    }
    public static void main(String[] args) {
        int[][] mat = {{1,2,3},{4,5,6},{7,8,9}};
        int r = maxRowIndex(mat);
        System.out.println("Row " + r + " (sum=" + (r==2?24:0) + ")"); // Row 2 (sum=24)
    }
}
